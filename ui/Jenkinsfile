
pipeline {
    agent any 
    stages {
        stage('Install dependencies') { 
            steps {
                dir("ui"){
                    sh 'npm install'
                }
            }
        }
        stage('Test') { 
            steps {
                dir("ui"){
                    // sh 'npm run ci-test'
                    sh 'echo TEST'
                }
            }
        }
        stage('Production-Build') { 
            steps {
                dir("ui"){
                    sh 'npm run build'
                }
            }
        }
    }
    post {
        always {
            email body: 'A Test EMail', recipientProviders: [[$class: 'nagcloudlab@gmail.com'], [$class: 'nagcloudlab@gmail.com']], subject: 'Test'
        }
    }
}